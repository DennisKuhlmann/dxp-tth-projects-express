<%- include('../utils/head', {pageTitle: 'Task List'}); -%>
<%- include('../utils/navigation'); -%>

<body>

<h1 class="text-center mt-3" style="color: white;">My Task List</h1>


<div class="container">

    <!-- Main Search Row -->
    <!-- <block Search Row 1 > -->
    <div class="row">
        <!-- Search & Add Task Field -->
        <div class="col-lg-4 col-md-6 col-sm-12 mt-2">

            <%- include('../utils/error'); -%>

            <div class="input-group d-flex justify-content-between mt-3">
                <!-- Add Task -->
                <label for="taskContent"></label>
                <input type="text" class="form-control" id="taskContent" placeholder="Add a Task">
                <button class="btn" id="addTask">Add Task</button>
            </div>

            <div class="form-group search-field w-100">
                <label for="searchText"></label>
                <input type="text" class="form-control rounded filter" id="searchText" placeholder="Search Task">
            </div>
        </div><!-- </block Search Field > -->

    </div><!-- </block Search Row 1 > -->
</div>







    <div class="container mt-3 mb-5">
        <table class="table table-dark table-striped taskListDatatable" id="taskListDatatable" data-page-length="10">
            <thead>
            <tr>
                <th>Task</th>
                <th>Creation Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
        </table>
    </div>










</body>

